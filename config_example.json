{
  "model": "resnet50",
  "dataset": "cifar10",
  "num_classes": 10,
  "epochs": 50,
  "lr": 0.001,
  "weight_decay": 0.01,
  "optimizer": "adamw",
  "target_headroom_gb": 3.0,
  "min_batch_size": 4,
  "max_batch_size": 64,
  "difficulty_window": 1000,
  "pid_kp": 0.15,
  "pid_ki": 0.02,
  "pid_kd": 0.08,
  "enable_amp": true,
  "gradient_checkpointing": false,
  "fused_optimizer": true,
  "device_id": 0,
  "gc_threshold_gb": 2.0,
  "checkpoint_dir": "./checkpoints",
  "checkpoint_interval": 5,
  "log_interval": 100,
  "log_file": "training.log"
}
